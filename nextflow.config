manifest {
    name = 'crukci-bioinformatics/nf-referencebuilder'
    author = 'Richard Bowers'
    description = 'CRUK-CI reference building pipeline. For internal use only.'
    mainScript = 'builder.nf'
    nextflowVersion = '>=20.0.0'
    version = '2.0.0'
}

executor {
    $slurm {
        queueSize = 150
        pollInterval = '30sec'
        queue = 'general'
        clusterOptions = "--nodes=1 --open-mode=truncate"
        jobName = { "'${task.process.split(/:/).last()} ${task.tag}'" }
    }
}

singularity.enabled = true
singularity.autoMounts = true
singularity.runOptions = "--bind '${projectDir}'"

process {
    cpus = 1
    memory = '1GB'
    time = '1h'

    tag = { "${genomeInfo.base}" }

    container = "crukcibioinformatics/referencebuilder:${manifest.version}"

    errorStrategy = {
        task.exitStatus in [ 104, 134, 137..140 ] ? 'retry' : 'ignore'
    }

    withLabel:picard {
       memory = { 2.GB * 2 ** (task.attempt - 1) } // So 2, 4, 8, 16 etc
       time = { 4.h * task.attempt }
       maxRetries = 3
    }

    withLabel:builder {
       memory = { 8.GB * 2 ** (task.attempt - 1) } // So 8, 16, 32
       time = { 4.h * task.attempt }
       maxRetries = 2
    }

    withLabel:fetcher {
       memory = 4.MB
       time = '1h'
       executor = 'local'
    }

    withLabel:tiny {
       memory = 4.MB
       time = '5m'
       executor = 'local'
    }
}

profiles {
    standard {
        params.referenceTop = '/data/personal/bowers01/nf_reference_data'

        process {
            executor = 'local'
        }

        executor.$local.cpus = 4
        executor.$local.memory = '32GB'
    }

    cluster {
        params.referenceTop = '/mnt/scratcha/bioinformatics/reference_data/reference_genomes'

        process {
            executor = 'slurm'
            jobName = { "'ReferenceBuilder ${task.process.split(/:/).last()} ${task.tag}'" }
        }
    }

    bioinf {
        params.referenceTop = '/data/personal/bowers01/nf_reference_data'

        process {
            executor = 'local'
        }

        executor.$local.cpus = 40
        executor.$local.memory = '200GB'
    }
}

params {

    // Location of properties files.

    genomeInfoDirectory = "${projectDir}/genomeinfo"

    // Software versions.

    BWA_VERSION = '0.7.17'
    BWAMEM2_VERSION = '2.2.1'
    BOWTIE1_VERSION = '1.3.1'
    JELLYFISH_VERSION = '2.3.0'
    PICARD_VERSION = '2.27.5'
    SALMON_VERSION = '1.9.0'
    SAMTOOLS_VERSION = '1.16.1'
    STAR_VERSION = '2.7.10b'

    // Application paths in the container.

    BWA = "/opt/bwa-${BWA_VERSION}/bwa"
    BWAMEM2 = "/opt/bwa-mem2-${BWAMEM2_VERSION}/bwa-mem2"
    BOWTIE1 = "/opt/bowtie-${BOWTIE1_VERSION}/bowtie-build"
    STAR = "/opt/STAR-${STAR_VERSION}//bin/Linux_x86_64_static/STAR"
    SALMON = "/opt/salmon-${SALMON_VERSION}/bin/salmon"

    SAMTOOLS = "/opt/samtools-${SAMTOOLS_VERSION}/bin/samtools"
    PICARD = "/opt/picard-${PICARD_VERSION}.jar"
    JELLYFISH = "/opt/jellyfish-${JELLYFISH_VERSION}/bin/jellyfish"

    GTFTOGENEPRED = '/opt/ucsc_tools/gtfToGenePred'
    GENEPREDTOGTF = '/opt/ucsc_tools/genePredToGtf'
}

timeline {
    enabled = true
    file = "${launchDir}/work/execution_timeline.html"
}
report {
    enabled = true
    file = "${launchDir}/work/execution_report.html"
}
